<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fight.dt.business.dao.UserDao">

    <select id="getUserById" parameterType="Integer" resultType="com.fight.dt.business.common.beans.User">
        SELECT id, username, password, name, sex, birthday, regist_time as registTime,
        status, update_time as updateTime
        FROM user u
        <where>
            u.id = #{id}
        </where>
    </select>

</mapper>
